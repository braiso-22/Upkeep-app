<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/componentCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/componentIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/id"
            android:textColor="?colorOnSecondary"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/componentCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="@string/code"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/componentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="?colorOnSecondary"
            android:textSize="20sp"
            android:text="@string/name"
            app:layout_constraintBottom_toBottomOf="@+id/componentIdText"
            app:layout_constraintStart_toEndOf="@+id/componentIdText"
            app:layout_constraintTop_toTopOf="@+id/componentIdText" />

        <TextView
            android:id="@+id/componentBrandText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/brand"
            android:textSize="16sp"
            android:textColor="?colorOnSecondary"
            app:layout_constraintBottom_toBottomOf="@+id/componentNameText"
            app:layout_constraintStart_toEndOf="@+id/componentNameText"
            app:layout_constraintTop_toTopOf="@+id/componentNameText" />

        <TextView
            android:id="@+id/componentModelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/model"
            android:textColor="?colorOnSecondary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/componentBrandText"
            app:layout_constraintStart_toEndOf="@+id/componentBrandText"
            app:layout_constraintTop_toTopOf="@+id/componentBrandText" />

        <TextView
            android:id="@+id/componentSerialNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/serialNumber"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/componentNameText"
            app:layout_constraintTop_toBottomOf="@+id/componentNameText" />

        <TextView
            android:id="@+id/componentObservationsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/observations"
            app:layout_constraintBottom_toBottomOf="@+id/componentSerialNumberText"
            app:layout_constraintStart_toEndOf="@+id/componentSerialNumberText"
            app:layout_constraintTop_toTopOf="@+id/componentSerialNumberText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>